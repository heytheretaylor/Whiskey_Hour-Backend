<%= form_for(@new_post) do |f| %>
  <%= f.label :content, "post goes here" %>
  <%= f.text_field :content %>
  <%= f.submit "post!" %>
<% end %>

<% @posts.each do |post| %>
<div class="post">
<div class="post-email"><strong><%= post.user.email %>:</strong></div>
<div class="post-content"><%= post.content %></div>
</div>
<% end %>